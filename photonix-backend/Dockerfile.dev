FROM ruby:3.2.9-slim

# Install dependencies
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    git \
    libpq-dev \
    libvips \
    imagemagick \
    libmagickwand-dev \
    curl \
    postgresql-client \
    libyaml-dev \
    && rm -rf /var/lib/apt/lists /var/cache/apt/archives

WORKDIR /rails

# Copy Gemfile first for better caching
COPY Gemfile ./

# Install gems (generate fresh Gemfile.lock for Linux)
RUN bundle lock --add-platform arm64-linux && \
    bundle install

# Copy rest of application
COPY . .

# Create storage directories
RUN mkdir -p storage/originals storage/thumbnails/small storage/thumbnails/medium storage/thumbnails/large

EXPOSE 3000

CMD ["bundle", "exec", "rails", "server", "-b", "0.0.0.0"]

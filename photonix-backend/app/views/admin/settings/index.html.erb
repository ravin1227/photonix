<div class="px-4 py-6">
  <div class="mb-6 sm:flex sm:items-center sm:justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Application Settings</h2>
      <p class="mt-1 text-sm text-gray-600">Configure your Photonix instance for production deployment</p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= button_to "Reset to Defaults", admin_settings_reset_path, method: :post,
          data: { confirm: "Are you sure? This will reset all settings to their default values." },
          class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>

  <%= form_with url: admin_settings_path, method: :patch, class: "space-y-6" do |form| %>
    <% @grouped_settings.each do |group_name, settings| %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900"><%= group_name %></h3>
        </div>
        <div class="px-6 py-4 space-y-6">
          <% settings.each do |key, value| %>
            <div>
              <label for="<%= key %>" class="block text-sm font-medium text-gray-700 mb-1">
                <%= key.humanize.titleize %>
              </label>

              <% setting_record = Setting.find_by(key: key) %>
              <% if setting_record&.description %>
                <p class="text-xs text-gray-500 mb-2"><%= setting_record.description %></p>
              <% end %>

              <% if key.ends_with?('_enabled') %>
                <!-- Boolean toggle -->
                <select name="settings[<%= key %>]" id="<%= key %>"
                    class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                  <option value="true" <%= 'selected' if value == 'true' %>>Enabled</option>
                  <option value="false" <%= 'selected' if value == 'false' %>>Disabled</option>
                </select>
              <% elsif key == 'allowed_file_types' || key == 'thumbnail_sizes' %>
                <!-- Multi-line text -->
                <textarea name="settings[<%= key %>]" id="<%= key %>" rows="2"
                    class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                    placeholder="<%= Setting::DEFAULTS[key] %>"><%= value %></textarea>
                <p class="mt-1 text-xs text-gray-500">
                  <% if key == 'allowed_file_types' %>
                    Comma-separated list (e.g., jpg,png,gif)
                  <% elsif key == 'thumbnail_sizes' %>
                    Comma-separated sizes in WIDTHxHEIGHT format
                  <% end %>
                </p>
              <% else %>
                <!-- Regular text input -->
                <%= text_field_tag "settings[#{key}]", value,
                    class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                    placeholder: Setting::DEFAULTS[key] %>
                <% if key == 'server_url' %>
                  <p class="mt-1 text-xs text-gray-500">
                    Include protocol (http:// or https://). This is used for QR codes and API endpoints.
                  </p>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Important Notes Section -->
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Important Notes</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <ul class="list-disc pl-5 space-y-1">
              <li><strong>Server URL:</strong> Update this to your actual domain when deploying to production (e.g., https://photos.yourdomain.com)</li>
              <li><strong>QR Codes:</strong> QR codes generated will use the Server URL setting, so update it before generating codes for mobile apps</li>
              <li><strong>Storage Quota:</strong> Default quota assigned to new users. Existing users won't be affected.</li>
              <li><strong>File Types:</strong> Changes apply to new uploads only.</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Save Button -->
    <div class="flex justify-end space-x-3 pt-4">
      <%= link_to "Cancel", admin_dashboard_path,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit "Save Settings",
          class: "inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <!-- Current Configuration Display -->
  <div class="mt-8 bg-gray-50 border border-gray-200 rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Reference</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
      <div>
        <span class="font-medium text-gray-700">API Endpoint:</span>
        <code class="ml-2 px-2 py-1 bg-gray-100 rounded"><%= @settings['server_url'] %>/api/v1</code>
      </div>
      <div>
        <span class="font-medium text-gray-700">QR Login Status:</span>
        <span class="ml-2 px-2 py-1 <%= @settings['qr_login_enabled'] == 'true' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> rounded">
          <%= @settings['qr_login_enabled'] == 'true' ? 'Enabled' : 'Disabled' %>
        </span>
      </div>
      <div>
        <span class="font-medium text-gray-700">Face Detection:</span>
        <span class="ml-2 px-2 py-1 <%= @settings['face_detection_enabled'] == 'true' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> rounded">
          <%= @settings['face_detection_enabled'] == 'true' ? 'Enabled' : 'Disabled' %>
        </span>
      </div>
      <div>
        <span class="font-medium text-gray-700">Max Upload:</span>
        <span class="ml-2"><%= @settings['max_upload_size_mb'] %> MB</span>
      </div>
    </div>
  </div>
</div>

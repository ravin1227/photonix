<!DOCTYPE html>
<html>
  <head>
    <title>Photonix Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  </head>

  <body class="bg-gray-50">
    <div class="min-h-screen flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-white shadow-lg border-r border-gray-200 fixed h-screen flex flex-col">
        <div class="flex flex-col h-full">
          <!-- Logo -->
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-center space-x-3">
              <div class="bg-gray-900 rounded-lg p-2">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h1 class="text-xl font-bold text-black">Photonix</h1>
            </div>
          </div>

          <!-- Navigation -->
          <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
            <%= link_to admin_dashboard_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-lg transition-colors #{request.path == admin_dashboard_path ? 'bg-gray-900' : 'text-black hover:bg-gray-100'}" do %>
              <svg class="w-5 h-5 mr-3 #{request.path == admin_dashboard_path ? 'text-white' : 'text-black'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              <span class="#{request.path == admin_dashboard_path ? 'text-white' : 'text-black'}">Dashboard</span>
            <% end %>
            <%= link_to admin_users_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-lg transition-colors #{request.path.include?('/admin/users') ? 'bg-gray-900' : 'text-black hover:bg-gray-100'}" do %>
              <svg class="w-5 h-5 mr-3 #{request.path.include?('/admin/users') ? 'text-white' : 'text-black'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
              <span class="#{request.path.include?('/admin/users') ? 'text-white' : 'text-black'}">Users</span>
            <% end %>
            <%= link_to admin_qr_logins_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-lg transition-colors #{request.path.include?('/admin/qr_logins') ? 'bg-gray-900' : 'text-black hover:bg-gray-100'}" do %>
              <svg class="w-5 h-5 mr-3 #{request.path.include?('/admin/qr_logins') ? 'text-white' : 'text-black'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"></path>
              </svg>
              <span class="#{request.path.include?('/admin/qr_logins') ? 'text-white' : 'text-black'}">QR Login</span>
            <% end %>
            <%= link_to admin_settings_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-lg transition-colors #{request.path.include?('/admin/settings') ? 'bg-gray-900' : 'text-black hover:bg-gray-100'}" do %>
              <svg class="w-5 h-5 mr-3 #{request.path.include?('/admin/settings') ? 'text-white' : 'text-black'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="#{request.path.include?('/admin/settings') ? 'text-white' : 'text-black'}">Settings</span>
            <% end %>
          </nav>

          <!-- User Section -->
          <div class="p-4 border-t border-gray-200 mt-auto">
            <div class="flex items-center space-x-3 mb-3 px-4 py-2 bg-gray-50 rounded-lg">
              <div class="w-8 h-8 bg-gray-900 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white text-sm font-medium"><%= current_user.name.first.upcase %></span>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-black truncate"><%= current_user.name %></p>
                <p class="text-xs text-black truncate"><%= current_user.email %></p>
              </div>
            </div>
            <%= button_to admin_logout_path, method: :delete, class: "w-full flex items-center justify-center px-4 py-2.5 border border-transparent text-sm font-medium rounded-lg bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 shadow-sm" do %>
              <svg class="w-4 h-4 mr-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              <span class="text-white">Logout</span>
            <% end %>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <div class="flex-1 ml-64">
        <!-- Top Bar -->
        <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-10">
          <div class="px-6 py-4">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-2xl font-bold text-black">
                  <%= content_for(:page_title) || 'Dashboard' %>
                </h2>
                <p class="text-sm text-black mt-1">
                  <%= content_for(:page_subtitle) || 'Welcome back, ' + current_user.name %>
                </p>
              </div>
            </div>
          </div>
        </header>

        <!-- Flash messages -->
        <% if flash[:notice] %>
          <div class="px-6 pt-6">
            <div class="bg-gray-50 border-l-4 border-gray-400 rounded-lg p-4 flex items-center">
              <svg class="w-5 h-5 text-black mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="text-black font-medium"><%= flash[:notice] %></p>
            </div>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="px-6 pt-6">
            <div class="bg-gray-50 border-l-4 border-gray-600 rounded-lg p-4 flex items-center">
              <svg class="w-5 h-5 text-black mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="text-black font-medium"><%= flash[:alert] %></p>
            </div>
          </div>
        <% end %>

        <!-- Main content -->
        <main class="p-6">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
